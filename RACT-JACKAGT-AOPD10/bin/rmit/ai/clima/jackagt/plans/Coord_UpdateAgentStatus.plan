package rmit.ai.clima.jackagt.plans;
import rmit.ai.clima.jackagt.events.*;
import rmit.ai.clima.jackagt.data.*;
import rmit.ai.clima.interfaces.*;

public plan Coord_UpdateAgentStatus extends Plan
{
	/******** Start PDT Design Block *** DO NOT EDIT IT *********/

/*
Plan Name: Coord_UpdateAgentStatus
*/
	//Events handled by the plan are declared here.
	#handles event EUpdateBel eupdatebel_h;


	// Declarations of any beliefset/data that the plan accesses.
	#modifies data AgentGold bel_agentGold_dat;

	#modifies data AgentPositions bel_agentPositions_dat;

/******** End PDT Design Block *** DO NOT EDIT IT *********/
	// The enclosing agent or capability has to implement these interfaces
	#uses interface DebugInterface consoleIface;
	context()
	{
		// Trigger: Event "MEAgentMoved"
		true;
	}

	body()
	{
		bel_agentPositions_dat.add(eupdatebel_h.name, eupdatebel_h.currentPos.x , eupdatebel_h.currentPos.y );
		bel_agentGold_dat.add(eupdatebel_h.name, eupdatebel_h.noCarryingGold);
		
		
		//		consoleIface.showConsoleDebug("Coordinator Says: "+meinformagentstatus_h.agentName +" just moved, these are the agents I currently know about");
				logical String $agentName;
				logical int $numGold;
				Cursor agentInfo = bel_agentGold_dat.get($agentName,$numGold);
				while(agentInfo.next())
				{
					consoleIface.showConsoleDebug("\t" + $agentName.as_string() + " : #NumGold ("+$numGold.as_int()+")");
				}

	}
}
